{% extends '@backend/base.html.twig' %}

{% block title %}Portfolio - Admin Panel!{% endblock %}

{% block body %}

<!-- begin app-main -->
<div class="app-main" id="main">
    <!-- begin container-fluid -->
    <div class="container-fluid">
        <!-- begin row -->
        <div class="row">
            <div class="col-md-12 m-b-30">
                <!-- begin page title -->
                <div class="d-block d-sm-flex flex-nowrap align-items-center">
                    <div class="page-title mb-2 mb-sm-0">
                        <h1>Portfolios</h1>
                    </div>
                    <div class="ml-auto d-flex align-items-center">
                        <nav>
                            <ol class="breadcrumb p-0 m-b-0">
                                <li class="breadcrumb-item">
                                    <a href="{{ path('app_dashboard') }}"><i class="ti ti-home"></i></a>
                                </li>
                                <li class="breadcrumb-item active text-primary" aria-current="page">Portfolio</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end page title -->
            </div>
        </div>

        <!-- start row -->
        <div class="row">
            <div class="col-xxl-9 m-b-30">
                <div class="card card-statistics dating-contant h-100 mb-0">
                    <div class="card-header d-flex align-items-center justify-content-between"> <!---->
                        <h4 class="card-title">All my portfolios</h4>
                        <div class="dropdown">
                            <a class="btn btn-primary" href="{{ path('create_portfolio') }}" aria-haspopup="true" aria-expanded="false">
                                Add New
                            </a>
                        </div>

                        {# Flash alerts displays #}
                        {% for type, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ type }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}

                    </div>
                    <div class="card-body scrollbar scroll_dark pt-0" style="max-height: 350px;">
                        <div class="datatable-wrapper table-responsive">
                            <table id="datatable" class="table table-borderless table-striped">

                                <thead>
                                    <tr>
                                        <th class="border-top-0">#</th>
                                        <th class="border-top-0">Name</th>
                                        <th class="border-top-0">Category</th>
                                        <th class="border-top-0">Action</th>
                                    </tr>
                                </thead>
                                <tbody class="text-muted">
                                {% if portfolios|length > 0 %}
                                    {% for portfolio in portfolios %}
                                        <tr>
                                            <td>{{ portfolio.id }}</td>
                                            <td>
                                                <div class="bg-img">
                                                    <img class="img-fluid" src="{{ portfolio.image }}" alt="photo">
                                                </div>
                                                <p>{{ portfolio.name }}</p>
                                            </td>
                                            <td>{{ portfolio.category }}</td>
                                            <td>
                                                <a href="/admin/portfolio/edit/{{ portfolio.id }}" class="mr-2"><i class="fa fa-pencil" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"></i></a>
                                                <a href="/admin/portfolio/delete/{{ portfolio.id }}"><i class="fa fa-trash" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <p>No portfolio found.</p>
                                {% endif %}
                                </tbody>   
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        
        </div>
        <!-- end row -->
    </div>
    <!-- end container-fluid -->
</div>
<!-- end app-main -->

{% endblock %}

