                    </div>
                    <div class="get-started">
                        <a href="#">Reach Me<i class="fas fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div> 
    <!-- Pricing Area End -->        
    <!-- Clients Testimonial -->
    <div class="clients-testimonial subtitle">
        <h3 class="mb-40">.<span>cool</span> testimonials</h3>
        <div class="clients-testimonial-active owl-carousel">

        {% if testimonials|length > 0 %}
            {% for testimonial in testimonials %}
                <div class="single-testimonials">
                    <div class="client-image">
                        <img src="{{ testimonial.image }}" alt="clients">
                    </div>
                    <div class="feedback-text">
                        <p class="client-feedback">{{ testimonial.comment }}</p>
                        
                        <p class="client-name">{{ testimonial.name }}, <span>{{ testimonial.position }}</span></p>
                        <center>
                        <a href="{{ testimonial.linkedin }}" class="pointer-href" target="_blank"><p><i class="fab fa-linkedin-in"></i></p></a>
                        </center>

                    </div>
                </div>
            {% endfor %}
            {% else %}
                <p>No testimonials found.</p>
        {% endif %}
           
        </div>            
    </div> 
    <!-- Clients Testimonial End -->
    <!-- Logo Carousel -->
    <div class="clients-logo-carousel owl-carousel text-center">
        <img src="{{ asset("frontend/img/clients/web.png") }}" alt="logo">
        <img src="{{ asset("frontend/img/clients/bootstrap.png") }}" alt="logo">
        <img src="{{ asset("frontend/img/clients/php.png") }}" alt="logo">
